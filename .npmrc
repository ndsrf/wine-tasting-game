# NPM Configuration
# Controls how npm version command behaves

# Create git tag when running npm version
git-tag-version=true

# Do NOT automatically push after npm version
# This allows version bumps to be part of pull requests
# and pushed manually after review
# To push after version bump: git push --follow-tags
tag-version-prefix=v

# Sign git tags (optional, set to true if you want signed tags)
sign-git-tag=false

# Use legacy peer deps to resolve dependency conflicts
# Required for @anthropic-ai/sdk compatibility with existing zod version
legacy-peer-deps=true
